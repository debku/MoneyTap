<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    <ImageView
        android:id="@+id/pImage1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:scaleType="fitXY"
        android:background="@drawable/prof_image" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_prodname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:text="Title:"
            android:textColor="@color/color_details"
            android:textSize="19sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edi_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_title"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@+id/tv_title"
            android:layout_toRightOf="@+id/tv_title"
            android:clickable="false"
            android:cursorVisible="false"
            android:singleLine="true"
            android:editable="false"
            android:focusable="false"
            android:focusableInTouchMode="false" />

    </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rl_description"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/color_details"
                android:textSize="19sp"
                android:textStyle="bold"
                android:text="Description"
                android:id="@+id/tv_description"
                />

         <EditText
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/edi_description"
             android:layout_alignBaseline="@+id/tv_description"
             android:layout_toEndOf="@+id/tv_description"
             android:layout_toRightOf="@+id/tv_description"
             android:cursorVisible="false"
             android:editable="false"
             android:focusable="false"
             android:focusableInTouchMode="false"/>
        </RelativeLayout>
    </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_data"
        android:layout_marginTop="4dp"
        android:background="#f2f2f2"></View>


</RelativeLayout>
