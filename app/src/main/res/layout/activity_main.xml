<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_back"
    tools:context="com.example.aa.moneytap.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Welcome to Search Page"
        android:layout_marginLeft="70dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:id="@+id/tv_heading"
        android:textColor="@color/color_heading"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/rl_box">



        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/auto_text1"
            android:layout_marginTop="160dp"
            android:background="@drawable/edittext_box"
            android:hint="Enter your query here"
            />
        <Button
            android:id="@+id/btn_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/auto_text1"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="60dp"
            android:background="@color/color_btn"
            android:text="Search"
            android:textStyle="bold"

            />
    </RelativeLayout>



</RelativeLayout>
